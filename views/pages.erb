<h1>Student Pages</h1>

<% if login? %><a class="big button" href="/addpage">Add Page</a><% end %>

<ul id="pages_list">
<% @people.each do |person| %>
<% if person.email == session[:email] %>
	<% myPage = true %>
<% else %>
	<% myPage = false %>
<% end %>
	<li>
		<h2><%= person.name %></h2>
		<ul>
		<% person.pages.each do |page| %>
			<li><a href="/pages/<%= page.slug %>"><%= page.title %></a>
				<% if myPage %>
					 <ul class="page_controls">
					 	<li><a class="button" href="/edit/<%= page.slug %>">Edit</a></li>
					 	<li><a class="button" href="/delete/<%= page.slug %>">Delete</a></li>
					 </ul>
				<% end %>
			</li>
		<% end %>
		</ul>
	</li>
<% end %>
</ul>